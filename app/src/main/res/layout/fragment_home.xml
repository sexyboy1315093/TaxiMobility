<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ltCoffee"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.387"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/djkqdl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금은 "
            android:textColor="@color/black"
            tools:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@id/txtRest"
            app:layout_constraintBottom_toBottomOf="@id/txtRest"
            app:layout_constraintEnd_toStartOf="@id/txtRest"/>
        <TextView
            android:id="@+id/txtRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴식중"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:visibility="gone"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/ltCoffee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 입니다."
            android:textColor="@color/black"
            tools:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@id/txtRest"
            app:layout_constraintBottom_toBottomOf="@id/txtRest"
            app:layout_constraintStart_toEndOf="@id/txtRest"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/sub_color"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivWeather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:visibility="visible"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivWeather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/cl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/ivCar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/car_background"
            android:layout_gravity="end|bottom"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_arrow_right_alt_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCarNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="52수0263"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtCarAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량을 등록하세요."
                android:textColorHint="@color/black"
                tools:visibility="gone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/txtSubCarAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:text="차량을 등록하셔야 콜버튼이 동작합니다."
                android:textSize="12sp"
                android:textColorHint="@color/gray"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvCarCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="기아/"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvCarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="K5"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/cd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ltAnimation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/lottie_ani"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/tvCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="콜 멈춤"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#E6744F"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>